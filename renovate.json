{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "after 10pm and before 5am every weekday"
  ],
  "baseBranches": [
    "development"
  ],
  "addLabels": [
    "renovate"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchPackagePatterns": [
        "lint",
        "prettier",
        "@types",
        "chai",
        "mocha"
      ],
      "automerge": true
    }
  ]
}