{
  "$id": "https://schemas.ory.sh/presets/kratos/quickstart/email-password/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "stripeId": {
          "type": "string",
          "title": "Stripe ID",
          "minLength": 1
        },
        "steamId": {
          "type": "string",
          "title": "Steam ID",
          "pattern": "^[0-9]{17}$"
        }
      },
      "required": [
        "email"
      ],
      "additionalProperties": false
    }
  }
}