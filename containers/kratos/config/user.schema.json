{
  "$id": "https://schemas.ory.sh/presets/kratos/quickstart/email-password/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "authProvider": {
          "type": "string",
          "title": "Authentication Provider",
          "description": "The provider used for registration",
          "enum": ["password", "steam", "discord"],
          "default": "password"
        },
        "name": {
          "type": "string",
          "title": "Display Name",
          "description": "User's display name"
        },
        "steamId": {
          "type": "string",
          "title": "Steam ID",
          "description": "User's Steam ID",
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            }
          }
        }
      },
      "required": [],
      "additionalProperties": false
    }
  }
}