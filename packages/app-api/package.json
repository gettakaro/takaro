{
  "name": "@takaro/api",
  "version": "0.0.1",
  "description": "REST API for Takaro",
  "main": "dist/main.js",
  "types": "main.ts",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "npx concurrently --kill-others-on-fail --names \"api,tests-compiler\" \"npm run start:dev:app\" \"npm run start:dev:test-compiler\"",
    "start:dev:app": "nodemon --exec 'node --inspect=0.0.0.0:12001 -r ts-node/register src/main.ts'  --config ../../nodemon.json",
    "start:dev:test-compiler": "tsc --preserveWatchOutput --watch",
    "build": "tsc -p ./tsconfig.build.json",
    "test": "npm run test:unit --if-present && npm run test:integration --if-present",
    "test:unit": "ts-mocha -p ./tsconfig.json src/**/*.unit.test.ts",
    "test:integration": "ts-mocha -p ./tsconfig.json --timeout 60000 --file ../test/src/waitUntilReady.ts src/**/*.integration.test.ts --exit",
    "test:watch": "npm run test -- --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@takaro/db": "0.0.1",
    "@takaro/http": "0.0.1",
    "@socket.io/admin-ui": "^0.5.0",
    "basic-auth": "^2.0.1",
    "bcrypt": "^5.0.1",
    "human-id": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "socket.io": "^4.5.2",
    "pg": "^8.8.0"
  },
  "devDependencies": {
    "@types/basic-auth": "^1.1.3",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^8.5.8"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.6",
    "utf-8-validate": "^5.0.9"
  }
}
