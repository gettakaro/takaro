{
  "name": "@takaro/db",
  "version": "0.0.1",
  "description": "An opinionated data layer",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "start:dev": "swc -w ./src -d ./dist",
    "build": "swc ./src -d ./dist",
    "test": "npm run test:unit --if-present && npm run test:integration --if-present",
    "test:unit": "ts-mocha -p ./tsconfig.json src/**/*.unit.test.ts",
    "test:integration": "ts-mocha -p ./tsconfig.json src/**/*.integration.test.ts --exit",
    "test:watch": "npm run test -- --watch",
    "migrate:create": "touch ./src/migrations/sql/$(date -u +\"%Y%m%d%H%M%S\").ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "convict": "^6.2.3",
    "knex": "^2.2.0",
    "objection": "^3.0.1",
    "pg": "^8.8.0"
  },
  "devDependencies": {
    "@takaro/test": "0.0.1",
    "@types/convict": "^6.1.1"
  }
}
