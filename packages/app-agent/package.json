{
  "name": "@takaro/agent",
  "version": "0.0.1",
  "description": "Takaro agent handles running of functions inside isolated environments",
  "main": "dist/main.js",
  "types": "main.ts",
  "type": "module",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev-local": "nodemon --exec 'npm run build && node --inspect=0.0.0.0:12002 dist/main.js'  --config ../../nodemon.json",
    "start:dev": "echo app-gent should run on the host",
    "build": "tsc -p ./tsconfig.build.json",
    "test": "npm run test:unit --if-present && npm run test:integration --if-present",
    "test:unit": "echo 'No tests (yet :))'",
    "test:integration": "tsc -p ./tsconfig.json && mocha --file ../test/dist/waitUntilReady.js --config ../../.mocharc.js dist/**/*.integration.test.js --exit",
    "test:watch": "npm run test -- --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@bull-board/express": "^4.2.2",
    "@takaro/db": "0.0.1",
    "@takaro/http": "0.0.1"
  }
}
