{
  "name": "takaro",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "start": "COMMAND=\"start\" REGEX=app  ./scripts/run-all-pkgs.sh",
    "start:dev": "COMMAND=\"start:dev\"  ./scripts/run-all-pkgs.sh",
    "shell": "docker-compose exec takaro bash",
    "build": "COMMAND=\"build\" ./scripts/run-all-pkgs.sh",
    "clean": "npx --workspaces rimraf dist && npx rimraf node_modules",
    "test": "npm --workspaces run --if-present test",
    "test:unit": "COMMAND=\"--if-present test:unit\"  ./scripts/run-all-pkgs.sh",
    "test:integration": "npm --workspaces run --if-present test:integration",
    "test:style": "npm run lint && npm run prettier",
    "test:style:fix": "npm run lint:fix && npm run prettier:fix",
    "lint": "npx --workspaces eslint \"**/*.{js,ts}\" --ignore-path ../../.eslintignore",
    "lint:fix": "npx --workspaces eslint \"**/*.{js,ts}\" --ignore-path ../../.eslintignore --fix",
    "prettier": "npx --workspaces prettier --check 'src/**/*.ts'",
    "prettier:fix": "npx --workspaces prettier --write 'src/**/*.ts'",
    "prepare": "[ -d '.husky' ] && husky install || true"
  },
  "engines": {
    "node": "16.x.x",
    "npm": "7.x.x"
  },
  "author": "Niek Candaele",
  "license": "AGPL-3.0-or-later",
  "homepage": "https://takaro.app",
  "devDependencies": {
    "@craco/craco": "7.0.0-alpha.7",
    "@types/body-parser": "^1.19.2",
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/expect": "^24.3.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.2",
    "@types/mocha": "^9.0.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.11.47",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.5",
    "@types/sinon": "^10.0.6",
    "@types/sinon-chai": "^3.2.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^7.3.0",
    "deepmerge": "^4.2.2",
    "docker-compose": "^0.23.17",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "mocha": "^8.4.0",
    "nodemon": "^2.0.13",
    "prettier": "2.4.1",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "ts-loader": "^9.3.1",
    "ts-mocha": "^8.0.0",
    "ts-node": "^10.3.0",
    "typescript": "^4.8.2"
  },
  "keywords": [],
  "workspaces": [
    "packages/*"
  ],
  "mocha": {
    "recursive": true,
    "file": [
      "./test/lifecycle.test.ts"
    ]
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "convict": "^6.2.3",
    "express": "^4.18.1",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "type-fest": "^2.18.0"
  }
}