{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "ts-node": {
    "esm": true,
    "compiler": "typescript"
  }
}
