{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "esnext",
      "dom",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "noErrorTruncation": false,
    "types": [
      "node",
      "react",
      "react-dom"
    ]
  }
}
